<%- contentFor('body') %>

<div id="map"></div>

<div id="search-box"></div>

<div id="result"></div>

<section class="section">
  <% include ./partials/create_tabs.ejs %>

  <div class="columns is-centered">
    <div class="column is-7 form-column">
      <form class="box">
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Event Photo</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="file">
                <label class="file-label">
                  <input class="file-input" type="file" name="photo">
                  <span class="file-cta">
                    <span class="file-icon">
                      <span class="iconify" data-icon="fa-solid:camera"></span>
                    </span>
                    <span class="file-label">
                      Upload photo
                    </span>
                  </span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Event Name</label>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control is-expanded">
                <input class="input" type="text" placeholder="Add a short, clear name">
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Location</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded">
                <input class="input" type="text" placeholder="Insert a place or address">
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Description</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <textarea class="textarea has-fixed-size" placeholder="Tell people more about the event" rows="3"></textarea>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Date/Time</label>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control">
                <input id="startDate" class="input flatpickr flatpickr-input" type="text" placeholder="">
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Genre</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <div class="select">
                  <label>
                    <select>
                      <option>Jazz</option>
                      <option>Funk</option>
                      <option>Classic</option>
                    </select>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!-- Left empty for spacing -->
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <button class="button is-primary">
                  Create
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

  </div>
</section>
